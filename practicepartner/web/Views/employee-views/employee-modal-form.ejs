<div
  class="modal fade"
  id="employee-modal-form"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  role="dialog"
  aria-labelledby="modalTitle"
  aria-hidden="true"
>
  <form
    class="needs-validation"
    id="frm-employee"
    method="post"
    enctype="multipart/form-data"
    novalidate
  >
    <div
      class="modal-dialog modal-dialog-centered modal-dialog modal-xl"
      role="document"
    >
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalTitle">Add/Edit Employee</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-xl-12">
              <div class="card">
                <div class="card-header">
                  <h4 class="card-title">Basic Details</h4>
                  <p class="card-title-desc">
                    Provide basic bio details of the Employee.
                  </p>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label class="form-label" for="employee-number"
                          >Employee Number</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="employee-number"
                          name="employeeNumber"
                          placeholder="Employee Number"
                          required
                        />
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label class="form-label" for="employee-firstname"
                          >First Name</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="employee-firstname"
                          name="employeeFirstName"
                          placeholder="First Name"
                          required
                        />
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label class="form-label" for="employee-middlename"
                          >Middle Name</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="employee-middlename"
                          name="employeeMiddleName"
                          placeholder="Middle Name"
                          required
                        />
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label class="form-label" for="employee-lastname"
                          >Last Name</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="employee-lastname"
                          name="employeeLastName"
                          placeholder="Last Name"
                          required
                        />
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="mb-3">
                        <label class="form-label" for="employee-email"
                          >Email</label
                        >
                        <input
                          type="email"
                          class="form-control"
                          id="employee-email"
                          name="employeeEmail"
                          placeholder="Email"
                          required
                        />
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="mb-3">
                        <label class="form-label" for="employee-phone"
                          >Phone Number</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="employee-phone"
                          name="employeePhone"
                          placeholder="Phone Number"
                          required
                        />
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- end card -->
            </div>
            <div class="col-xl-12">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label class="form-label" for="employee-department"
                          >Department</label
                        >
                        <select
                          class="form-control form-select"
                          id="employee-department"
                          name="employeeDepartment"
                          required
                        >
                          <option value="">Select Department</option>
                        </select>
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label class="form-label" for="employee-category"
                          >Category</label
                        >
                        <select
                          class="form-control form-select"
                          id="employee-category"
                          name="employeeCategory"
                          required
                        >
                          <option value="">Select Category</option>
                        </select>
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label class="form-label" for="employee-position"
                          >Position</label
                        >
                        <select
                          class="form-control form-select"
                          id="employee-position"
                          name="employeePosition"
                          required
                        >
                          <option value="">Select Position</option>
                        </select>
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label class="form-label" for="employee-status"
                          >Employment Status</label
                        >
                        <select
                          class="form-control form-select"
                          id="employee-status"
                          name="employeeStatus"
                          required
                        >
                          <option value="">Select Status</option>
                          <option value="Full-time">Full-time</option>
                          <option value="Part-time">Part-time</option>
                          <option value="Contract">Contract</option>
                          <option value="Intern">Intern</option>
                        </select>
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-4">
                      <div class="mb-3">
                        <label class="form-label" for="employee-gender"
                          >Gender</label
                        >
                        <select
                          class="form-control form-select"
                          id="employee-gender"
                          name="employeeGender"
                          required
                        >
                          <option value="">Select Gender</option>
                          <option value="Male">Male</option>
                          <option value="Female">Female</option>
                          <option value="Other">Other</option>
                        </select>
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="mb-3">
                        <label class="form-label" for="employee-date-of-birth"
                          >Date of Birth</label
                        >
                        <input
                          type="date"
                          class="form-control"
                          id="employee-date-of-birth"
                          name="employeeDateOfBirth"
                          required
                        />
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="mb-3">
                        <label class="form-label" for="employee-hire-date"
                          >Hire Date</label
                        >
                        <input
                          type="date"
                          class="form-control"
                          id="employee-hire-date"
                          name="employeeHireDate"
                          required
                        />
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="mb-3">
                        <label class="form-label" for="employee-address"
                          >Address</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="employee-address"
                          name="employeeAddress"
                          placeholder="Address"
                          required
                        />
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- end card -->
            </div>
            <div class="col-xl-12">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="mb-3">
                        <label class="form-label" for="employee-description"
                          >Description</label
                        >
                        <textarea
                          id="employee-description"
                          name="employeeDescription"
                          class="form-control"
                        ></textarea>
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                    <div class="col-md-4 offset-md-8">
                      <div class="mb-3">
                        <label class="form-label" for="employee-photo"
                          >Upload Photo</label
                        >
                        <input
                          type="file"
                          class="form-control"
                          id="employee-photo"
                          name="employeePhoto"
                          accept="image/*"
                          required
                        />
                        <div class="valid-feedback">Looks good!</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- end card -->
            </div>
          </div>
        </div>
        <!-- end col -->
        <div class="modal-footer">
          <div class="row">
            <div class="col-lg-12">
              <input type="hidden" name="id" id="_id" />
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <button type="submit" id="saveButton" class="btn btn-primary">
                Save <i class="fab fa-telegram-plane ms-1"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
