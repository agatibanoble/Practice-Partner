<div
  class="modal fade"
  id="contact-address-modal-form"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  role="dialog"
  aria-labelledby="contact-address-form-modalTitle"
  aria-hidden="true"
>
  <form
    class="needs-validation"
    id="frm-contact-address-form"
    method="post"
    novalidate
  >
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5
            class="modal-title font-size-16"
            id="contact-address-form-modalTitle"
          >
            Client Address
          </h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="col-xl-12">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-3">
                    <div class="mb-3">
                      <label class="form-label" for="client-number"
                        >Client Number</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="client-number"
                        name="clientNumber"
                        placeholder="Client Number"
                        required
                        readonly
                      />
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                  <div class="col-md-9">
                    <div class="mb-3">
                      <label class="form-label" for="client-name"
                        >Client Name</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="client-name"
                        name="clientName"
                        placeholder="Client Name"
                        required
                        readonly
                      />
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- end card -->
          </div>
          <div class="col-xl-12">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-4">
                    <div class="mb-3">
                      <label class="form-label region-id" for="region-id"
                        >Region/State</label
                      >
                      <select
                        class="form-control form-select"
                        id="region-id"
                        name="regionId"
                        required
                      >
                        <option>Select Region</option>
                      </select>
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="mb-3">
                      <label class="form-label" for="city">City</label>
                      <input
                        type="text"
                        class="form-control city"
                        id="city"
                        name="city"
                        placeholder="City"
                        required
                      />
                      <div class="invalid-feedback">
                        Please provide a valid city.
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="mb-3">
                      <label class="form-label" for="street">Street</label>
                      <input
                        type="text"
                        class="form-control"
                        id="street"
                        name="street"
                        placeholder="Street"
                        required
                      />
                      <div class="invalid-feedback">
                        Please provide a valid city.
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="mb-3">
                      <label class="form-label" for="land-mark"
                        >Land Mark</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="land-mark"
                        name="landMark"
                        placeholder="Land Mark"
                        required
                      />
                      <div class="invalid-feedback">
                        Please provide a valid Land Mark.
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="mb-3">
                      <label class="form-label" for="building-number"
                        >Building Number</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="building-number"
                        name="buildingNumber"
                        placeholder="Building Number"
                        required
                      />
                      <div class="invalid-feedback">
                        Please provide a valid Land Mark.
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="mb-3">
                      <label class="form-label" for="gps-address"
                        >GPS Address</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="gps-address"
                        name="gpsAddress"
                        placeholder="GPS Address"
                        required
                      />
                      <div class="invalid-feedback">
                        Please provide a valid Land Mark.
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label class="form-label" for="postal-address"
                        >Postal Address</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="postal-address"
                        name="postalAddress"
                        placeholder="Postal Address"
                        required
                      />
                      <div class="invalid-feedback">
                        Please provide a valid Postal Address.
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label class="form-label" for="residential-address"
                        >Residential Address</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="residential-address"
                        name="residentialAddress"
                        placeholder="Residential Address"
                        required
                      />
                      <div class="invalid-feedback">
                        Please provide a valid Permanent Address.
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="form-label" for="office-phone"
                        >Office Phone</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="office-phone"
                        name="officePhone"
                        placeholder="Office Phone"
                        ,
                        required
                      />
                      <div class="invalid-feedback">
                        This field requires a valid e-mail address
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="form-label" for="mobile-phone"
                        >Mobile Phone</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="mobile-phone"
                        name="mobilePhone"
                        placeholder="Mobile Number"
                        required
                      />
                      <div class="invalid-feedback">
                        This field requires a valid Phone Number
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="form-label" for="alternate-phone"
                        >Alternate Phone</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="alternate-phone"
                        name="alternatePhone"
                        placeholder="Alternate Number"
                        required
                      />
                      <div class="invalid-feedback">
                        This field requires a valid Phone Number
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-label" for="email">Email</label>
                      <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        placeholder="Email"
                      />
                      <div class="invalid-feedback">
                        This field requires a valid e-mail address
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-label" for="alternate-email"
                        >Alternate Email</label
                      >
                      <input
                        type="email"
                        class="form-control"
                        id="alternate-email"
                        name="alternateEmail"
                        placeholder="Email"
                      />
                      <div class="invalid-feedback">
                        This field requires a valid e-mail address
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- end card -->
          </div>
          <!-- end col -->
        </div>
        <div class="modal-footer">
          <input type="hidden" name="clientId" id="client-id" />
          <input type="hidden" name="_id" id="_id" />
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button
            type="submit"
            id="saveContactAddressButton"
            class="btn btn-primary"
          >
            Save <i class="fab fa-telegram-plane ms-1"></i>
          </button>
        </div>
      </div>
    </div>
  </form>
</div>
