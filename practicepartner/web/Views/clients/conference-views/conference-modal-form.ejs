<div
  class="modal fade"
  id="conference-modal-form"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  role="dialog"
  aria-labelledby="conference-form-modalTitle"
  aria-hidden="true"
>
  <form
    class="needs-validation"
    id="frm-conference-form"
    name="frm-conference-form"
    method="post"
    novalidate
  >
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title font-size-16" id="conference-modal-title">
            Client Conferencing
          </h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="col-xl-12">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-3">
                    <div class="mb-3">
                      <label class="form-label" for="client-number"
                        >Client Number</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="client-number"
                        name="clientNumber"
                        placeholder="Client Number"
                        required
                        readonly
                      />
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                  <div class="col-md-9">
                    <div class="mb-3">
                      <label class="form-label" for="client-name"
                        >Client Name</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="client-name"
                        name="clientName"
                        placeholder="Client Name"
                        required
                        readonly
                      />
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- end card -->
          </div>
          <div class="col-xl-12">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-4">
                    <div class="mb-3">
                      <label class="form-label" for="case-id">Case</label>
                      <select
                        class="form-control form-select"
                        id="case-id"
                        name="case"
                      >
                        <option>Select Case</option>
                      </select>
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                  <div class="col-md-8">
                    <div class="mb-3">
                      <label class="form-label" for="client-contact-ids"
                        >Client Contacts Present</label
                      >
                      <input
                        type="text"
                        class="form-control client-contact-ids"
                        id="client-contact-ids"
                        name="clientContacts"
                        placeholder="Select Client Contacts"
                        required
                      />
                      <div class="invalid-feedback">
                        Please provide a valid Contact Persons.
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-4">
                    <div class="mb-3">
                      <label class="form-label" for="caseId"
                        >Conference Type</label
                      >
                      <select
                        class="form-control form-select"
                        id="conference-type-id"
                        name="conferenceTypeId"
                      >
                        <option>Select Conference Type</option>
                      </select>
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="mb-3">
                      <label class="form-label" for="caseId"
                        >Conference Date</label
                      >
                      <input
                        type="text"
                        class="form-control date"
                        id="conference-date"
                        name="conferenceDate"
                        placeholder="Date"
                        required
                      />
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                  <div class="col-md-2">
                    <div class="mb-3">
                      <label class="form-label" for="caseId">Start Time</label>
                      <input
                        type="text"
                        class="form-control"
                        id="conference-start-time"
                        name="conferenceStartTime"
                        placeholder="Start Time"
                        required
                      />
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                  <div class="col-md-2">
                    <div class="mb-3">
                      <label class="form-label" for="caseId">End Time</label>
                      <input
                        type="text"
                        class="form-control"
                        id="conference-end-type"
                        name="conferenceEndTime"
                        placeholder="End Time"
                        required
                      />
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-8">
                    <div class="mb-3">
                      <label class="form-label" for="client-contact-ids"
                        >Topics Discussed</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="conference-topics"
                        name="conferenceTopics"
                        placeholder="Topics"
                        required
                      />
                      <div class="invalid-feedback">
                        Please provide a valid Contact Persons.
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="mb-3">
                      <label class="form-label" for="note-editor">Notes</label>
                      <!-- <div class="mb-3 email-editor"> -->
                      <textarea id="note-editor" name="notes"></textarea>
                      <!-- </div> -->
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- end card -->
          </div>
          <!-- end col -->
        </div>
        <div class="modal-footer">
          <input type="hidden" name="clientId" id="client-id" />
          <input type="hidden" name="id" id="_id" />
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button
            type="submit"
            id="saveConferenceButton"
            class="btn btn-primary"
          >
            Save <i class="fab fa-telegram-plane ms-1"></i>
          </button>
        </div>
      </div>
    </div>
  </form>
</div>
