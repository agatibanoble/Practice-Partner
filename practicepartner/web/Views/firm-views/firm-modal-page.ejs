<style>
  .firm-data {
    color: #350de9; /* Change color as needed */

    display: block;
    margin-top: 0.25rem; /* Add some space between the label and data */
  }
</style>
<div
  class="modal fade"
  id="firm-modal-page"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="firm-modal-page-modalTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="firm-modal-page-modalTitle">
          View Firm Details
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="card">
          <div class="card-header text-end">
            <a href="#" class="btn btn-light" id="btn-edit"
              ><i class="bx bx-plus me-1"></i> Edit</a
            >
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-3 mb-3">
                <label class="form-label" for="registration-number"
                  >Firm Registration Number</label
                >
                <div id="registration-number" class="firm-data"></div>
              </div>
              <div class="col-md-9 mb-3">
                <label class="form-label" for="firm-name">Firm Name</label>
                <div id="firm-name" class="firm-data"></div>
              </div>
              <div class="col-md-3 mb-3">
                <label class="form-label" for="date-established"
                  >Date Established</label
                >
                <div id="date-established" class="firm-data"></div>
              </div>
              <div class="col-md-9 mb-3">
                <label class="form-label" for="address">Address</label>
                <div id="address" class="firm-data"></div>
              </div>
              <div class="col-md-4 mb-3">
                <label class="form-label" for="city">City</label>
                <div id="city" class="firm-data"></div>
              </div>
              <div class="col-md-4 mb-3">
                <label class="form-label" for="region">Region</label>
                <div id="region" class="firm-data"></div>
              </div>
              <div class="col-md-4 mb-3">
                <label class="form-label" for="country">Country</label>
                <div id="country" class="firm-data"></div>
              </div>
              <div class="col-md-3 mb-3">
                <label class="form-label" for="postal-code">Postal Code</label>
                <div id="postal-code" class="firm-data"></div>
              </div>
              <div class="col-md-3 mb-3">
                <label class="form-label" for="phone-number"
                  >Phone Number</label
                >
                <div id="phone-number" class="firm-data"></div>
              </div>
              <div class="col-md-3 mb-3">
                <label class="form-label" for="email">Email</label>
                <div id="email" class="firm-data"></div>
              </div>
              <div class="col-md-3 mb-3">
                <label class="form-label" for="website">Website</label>
                <div id="website" class="firm-data"></div>
              </div>
              <div class="col-md-12 mb-3">
                <label class="form-label" for="description">Description</label>
                <div id="description" class="firm-data"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <input type="hidden" name="id" id="_id" />
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <button type="submit" disabled class="btn btn-primary">
          Save <i class="fab fa-telegram-plane ms-1"></i>
        </button>
      </div>
    </div>
  </div>
</div>
<%- include ('./firm-modal-form') %>
