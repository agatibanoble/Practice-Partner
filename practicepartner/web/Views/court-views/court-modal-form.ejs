<div
  class="modal fade"
  id="court-modal-form"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  role="dialog"
  aria-labelledby="court-modal-form-modalTitle"
  aria-hidden="true"
>
  <form class="needs-validation" id="frm-court" method="post" novalidate>
    <div
      class="modal-dialog modal-dialog-centered modal-dialog modal-md"
      role="document"
    >
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="court-modal-form-modalTitle">
            Add/Edit Region
          </h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-12">
              <div class="mb-3">
                <label for="court-name" class="form-label">Court Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="court-name"
                  name="courtName"
                  placeholder="Court Name"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input
                  type="text"
                  class="form-control"
                  id="location"
                  name="location"
                  placeholder="Location"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="mb-3">
                <label for="presiding-judge" class="form-label">Judge</label>
                <select
                  class="form-control form-select"
                  id="presiding-judge"
                  name="presidingJudge"
                  required
                >
                  <option value="">Select Country</option>
                </select>
                <div class="valid-feedback">Looks good!</div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="mb-3">
                <label for="level" class="form-label">Level</label>
                <select
                  class="form-control form-select"
                  id="level"
                  name="level"
                  required
                >
                  <option value="">Select Level</option>
                  <option value="Superior Court">Superior Court</option>
                  <option value="Lower Court">Lower Court</option>
                </select>
                <div class="valid-feedback">Looks good!</div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" id="_id" name="id" />
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button type="submit" class="btn btn-primary">
            Save <i class="fab fa-telegram-plane ms-1"></i>
          </button>
        </div>
      </div>
    </div>
  </form>
</div>
